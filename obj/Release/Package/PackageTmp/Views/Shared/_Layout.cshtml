<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>                                                                                  
    <div id="Wrapper">
        <ul class ="nav navbar-nav">
            <li>@Html.ActionLink("Supply", "Index", "Supply")</li>
            <li>@Html.ActionLink("Product", "Index", "Product")</li>
            <li>@Html.ActionLink("ProductType", "Index", "ProductType")</li>
            <li>@Html.ActionLink("Color_Options", "Index", "Color_Options")</li>
        </ul>
    </div>
    <style>
        #Wrapper {
            background-color: #d4e3e8;
            z-index: 1;
            height: 100%;
            width: 120px;
            position: fixed;
           font-family:Arial
        }      
    </style>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>            
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.IsInRole("admin"))
                    {
                        <li>@Html.ActionLink("E-Commerce", "Index", "Home", null, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Supply", "Index", "Supply")</li>
                        <li>@Html.ActionLink("Product", "Index", "Product")</li>
                        <li>@Html.ActionLink("ProductType", "Index", "ProductType")</li>
                        <li>@Html.ActionLink("Color_Options", "Index", "Color_Options")</li>
                    }
                    else if (@User.IsInRole("berhe"))
                    {
                         <li>@Html.ActionLink("E-Commerce", "Index", "Home", null, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Product", "Index", "Product")</li>
                        <li>@Html.ActionLink("ProductType", "Index", "ProductType")</li>
                        <li>@Html.ActionLink("Color_Options", "Index", "Color_Options")</li>
                    }
                    else if (@User.IsInRole("newadmin"))
                    {
                         <li>@Html.ActionLink("E-Commerce", "Index", "Home", null, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Supply", "Index", "Supply")</li>
                        <li>@Html.ActionLink("Product", "Index", "Product")</li>
                        <li>@Html.ActionLink("ProductType", "Index", "ProductType")</li>
                        <li>@Html.ActionLink("Color_Options", "Index", "Color_Options")</li>

                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content col-md-offset-1">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Designed by Supremeitsol</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
